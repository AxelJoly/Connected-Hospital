{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="header center teal-text text-lighten-1">Liste des patients</h1>
    <br>
    <div class="row center">
   <div class="container">
    <table class="bordered">
        <tr>
            <td><b>Prenom</b></td>
            <td><b>Nom</b></td>
            <td><b>Date d'entrée</b></td>
            <td><b>Date de sortie</b></td>
            <td></td>
        </tr>
        {% for patient in patients %}
        <tr>
            <td>{{ patient.firstName }}</td>
            <td >{{ patient.lastName }}</td>
            <td >{{ patient.effectiveDate | date }}</td>
            <td >{{ patient.releaseDate | date }}</td>
            <td>
                <a href="{{ path('showProfile',{'id':patient.id}) }}">
                    <button>Voir les détails</button>
                </a>
                <a href="{{ path('managePatient',{'id':patient.id}) }}">
                    <button>Modifier</button>
                </a>
            </td>
        </tr>

        {% endfor %}
    </table>
   </div>
{% endblock %}


