{% extends 'base.html.twig' %}
{% block body %}
<html>
<head>
</head>
<body>
    <div class="row center">
        <div class="row">
            <form action="{{ path('app.login') }}" method="post" class="form-horizontal">
                {% if error %}
                    <div>
                        <h4 class="header center teal-text" id="errorM">
                             {{ error.messageKey|trans(error.messageData, 'security') }}
                         </h4>
                     </div>
                {% endif %}

                <div class="container">
                     <div class="row">
                         <div class="col s12 offset-s2">
                            <div class="input-field col s8	">
                                 <input id="username" type="text" class="validate" name="_username" value="{{ username }}" />
                                <label for="username">Username</label>
                            </div>
                          </div>
                     </div>

                    <div class="row">
                        <div class="col s12 offset-s2">
                            <div class="input-field col s8">
                                 <input name="_password" id="password" class="validate" type="password" />
                                 <label for="password">Password</label>
                            </div>
                        </div>
                    </div>

                    <div class="card-action">
                        <button class="btn waves-effect waves-light" type="submit" name="action">
                            LOGIN <i class="material-icons right"></i>
                        </button>
                    </div>
                 </div>
            </form>

        </div>

    </div>
{% endblock %}